<div class="main-book-now main-container">
  {{!-- <div class="trip-details-confirm"></div> --}}
  <div class="head1">Confirm and pay</div>
  <form action="/confirm/:{{booking.roomID}}" method="POST" enctype="application/x-www-form-urlencoded"
    id="payment-form" name="payment-form">
    <div class="head3">{{booking.roomName}}</div>
    <div class="date-guest-info-cont row">
      <div class="book-now-room col-md-7">
        <img src="/photos/{{booking.roomImage}}" />
      </div>
      <div class="book-summary col-md-5">

        <div class="room-reserve-cont">
          <div class="date-info reserve-form">
            <div class="room-price"><b>${{booking.roomPrice}}</b> / night</div>
            <div class="check-in-cont">
              <label for="check-in">Check-in:</label><br />
              <input type="date" id="check-in" name="checkIn" min="2020-10-02" max="2022-01-01"
                value="{{booking.startDate}}" />
            </div>

            <div class="check-out-cont">
              <label for="check-out">Check-out:</label><br />
              <input type="date" id="check-out" name="checkOut" min="2020-10-02" max="2022-01-01"
                value="{{booking.endDate}}" />
            </div>

            <div class="guests-cont">
              <label for="guests">Guests:</label><br />
              <input type="number" min="1" name="guests" value="{{booking.guests}}" />
            </div>
            <div class="total-cont">
              Total Price: <span id="total">{{booking.totalPrice}}</span>
            </div>
            <input type="hidden" name="totalPrice" value="{{booking.totalPrice}}" />
            <input type="hidden" name="totalDays" value="{{booking.totalDays}}" />
            <input type="hidden" name="roomPrice" value="{{booking.roomPrice}}" />
            <input type="hidden" name="roomID" value="{{booking.roomID}}" />
            <input type="hidden" name="roomName" value="{{booking.roomName}}" />
            <input type="hidden" name="roomCity" value="{{booking.roomCity}}" />
            <input type="hidden" name="roomImage" value="{{booking.roomImage}}" />
          </div>
        </div>
      </div>
    </div>

    <hr />


    <div class="payment-info-cont">
      {{!-- <div class="fluid-container"> --}}
      <div class="head3">Pay with credit card or debit card</div>
      <div class="row">
        <input class="box form-control col-md" type="text" id="card-number" name="card-number"
          placeholder="Card number" />
      </div>
      <div class="row">
        <input class="box form-control col-md" type="text" id="expired-date" name="expired-date"
          placeholder="Expired date" />
        <input class="box form-control col-md" type="text" id="cvv" name="cvv" placeholder="CVV" />
      </div>
      <div class="row">
        <input class="box form-control col-md" type="text" id="postal-code" name="postal-code"
          placeholder="Postal code" />
        <select class="box form-control col-md" id="country" name="country">
          <option>Canada</option>
          <option>England</option>
          <option>France</option>
          <option>German</option>
          <option>Italy</option>
          <option>United States</option>
        </select>
      </div>
      <div class="row">
        <input class="box form-control col-md" type="text" id="coupon-code" name="coupon-code"
          placeholder="Enter your coupon code" />
      </div>
      {{!-- </div> --}}
      <hr />
      <div class="message-for-host-cont">
        <div class="head3">Message for your host</div>
        <p>
          Let the host know your check-in time and any special needs for
          your trip
        </p>
        <textarea class="form-control" id="message" name="message"></textarea>
      </div>
      <div class="agreement-cont">
        <div class="agreement">
          By selecting the button below, I agree to the House Rules and Cancellation Policy. I also agree to pay the
          total amount shown, which
          includes Service Fees.
        </div>
        <input type="submit" id="book-button" class="btn btn-info" value="Book Now"></button>
      </div>
    </div>
  </form>

</div>
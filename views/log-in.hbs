<div class="main-log-in-container background-cont main-container">
    <div class="log-in-form-container ">
        <div class="title">LOG IN</div>
        <form action="/log-in" method="POST" enctype="application/x-www-form-urlencoded" class="log-in-form">
            {{#each errors}}
            <small class="server-side-error">{{this}}</small><br>
            {{/each}}
            <div class="form-group">

                <input class="form-control" type="text" id="username" name="username" placeholder="Username" />
                <i class="fa fa-check-circle"></i>
                <i class="fa fa-exclamation-circle"></i>
                <small></small>

            </div>
            <div class="form-group">
                <input class="form-control" type="password" id="password" name="password" placeholder="Password" />
                <i class="fa fa-check-circle"></i>
                <i class="fa fa-exclamation-circle"></i>
                <small></small>
            </div>
            <input id="signin-button" type="submit" class="btn btn-dark" value="LOG IN">

            <a id="signup-button" class="btn btn-dark" href="/sign-up">
                SIGN UP </a>
        </form>
    </div>
</div>
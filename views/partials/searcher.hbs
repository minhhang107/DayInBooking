 <div class="search-section">
    <div class="form-cont">
      <form action="/search-results" method="POST" enctype="application/x-www-form-urlencoded" id="search-form">

        <div class="form-group form-group-search">
          <label for="city">City:</label>
          <input class="form-control" type="text" list="city" name="city" id="cityName" placeholder="Going to?"/>
          <datalist id="city">
            <option value="Montreal">Montreal</option>
            <option value="Ottawa">Ottawa</option>
            <option value="Toronto">Toronto</option>
            <option value="Quebec">Quebec</option>
            <option value="Vancouver">Vancouver</option>
          </datalist>
          <small id="nocity"></small>
        </div>


        <div class="form-group form-group-search">
          <label for="guests">Guests:</label>
          <input class="form-control" type="number" min="1" placeholder="Add guests" />
        </div>



        <div class="form-row">
          <div class="form-group form-group-search col-sm-6">
            <label for="check-in">Check-in:</label>
            <br />
            <input class="form-control" type="date" id="check-in" name="check-in-date" min="2020-10-02" max="2022-01-01"
              placeholder="Choose date" />
          </div>
          <div class="form-group form-group-search col-sm-6">
            <label for="check-out">Check-out:</label>
            <br />
            <input class="form-control" type="date" id="check-out" name="check-out-date" min="2020-10-02"
              max="2022-01-01" placeholder="Choose date" />
          </div>


        </div>
        <div class="form-row">
          <div class="form-group form-group-search col">
            <input id="search-button" class="btn btn-info" type="submit" value="Search"></button>
          </div>
        </div>
    </div>
    </form>
  </div>